modules = ["nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ClaimEvaluator Synergy Suite"

[[workflows.workflow]]
name = "ClaimEvaluator Synergy Suite"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start:replit"
waitForPort = 5003

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5003
externalPort = 80
exposeLocalhost = true

[deployment]
run = ["sh", "-c", "npm run deploy:replit"]

[env]
NODE_VERSION = "20"
NPM_VERSION = "latest"

[nix]
channel = "stable-23.11"

[gitHubImport]
requiredFiles = [".replit", "package.json", "package-lock.json"]

[[languages.typescript]]
pattern = "**/*.{ts,tsx}"
start = "npm run dev:replit"

[[languages.javascript]]
pattern = "**/*.{js,jsx}"
start = "npm run dev:replit"

[packager]
language = "nodejs"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages.typescript]
syntax = "typescript"
run = "npm run dev:replit"
