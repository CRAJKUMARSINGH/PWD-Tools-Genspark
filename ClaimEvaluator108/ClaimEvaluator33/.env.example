# ClaimEvaluator Synergy Suite - Environment Configuration
# Copy this file to .env and update with your actual API keys

# === AI API CONFIGURATION (At least one required for ClaimMaster.ai features) ===
# Grok (xAI) API - Primary AI provider for advanced claim analysis
GROK_API_KEY=xai-your-actual-api-key-here
GROK_BASE_URL=https://api.x.ai
GROK_MODEL=grok-2-latest

# OpenAI API - Fallback AI provider
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Gemini API - Additional AI provider for specialized tasks  
GEMINI_API_KEY=your_gemini_api_key_here

# === DATABASE CONFIGURATION ===
# PostgreSQL connection (for Replit, use provided URL)
DATABASE_URL=postgresql://username:password@localhost:5432/claimevaluator
# For Replit PostgreSQL: Use the connection string from Replit Database

# === APPLICATION CONFIGURATION ===
NODE_ENV=development
PORT=5003
SESSION_SECRET=your_secure_session_secret_here_minimum_32_characters

# === SECURITY CONFIGURATION ===
# CORS origins (comma-separated for production)
CORS_ORIGIN=http://localhost:5003,https://your-app.repl.co

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# === QUANTUM COMPUTATION SETTINGS ===
# Financial calculation precision
QUANTUM_PRECISION=4
QUANTUM_CURRENCY=INR
BASE_CURRENCY_RATE=1.0

# === CLAIM PROCESSING SETTINGS ===
# Maximum file size for document upload (in MB)
MAX_FILE_SIZE=50
ALLOWED_FILE_TYPES=pdf,docx,doc,xlsx,xls,txt

# Document processing timeout (in minutes)
PROCESSING_TIMEOUT=15

# === PERFORMANCE OPTIMIZATION ===
# Cache settings
CACHE_TTL=900000
CACHE_MAX_SIZE=1000
ENABLE_COMPRESSION=true

# Memory limits
MAX_MEMORY_MB=512
GC_INTERVAL_MS=300000

# === LOGGING AND MONITORING ===
LOG_LEVEL=info
ENABLE_PERFORMANCE_LOGS=true
ENABLE_ERROR_TRACKING=true

# === DEPLOYMENT SETTINGS ===
# Vercel deployment
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id

# GitHub integration
GITHUB_TOKEN=your_github_token_for_automated_deployment

# === LEGAL COMPLIANCE SETTINGS ===
# FIDIC contract standards
FIDIC_RED_BOOK_YEAR=2017
FIDIC_YELLOW_BOOK_YEAR=2017
FIDIC_GREEN_BOOK_YEAR=2021

# NHAI HAM model
NHAI_HAM_VERSION=2.0
ENABLE_NHAI_COMPLIANCE=true

# === REPLIT SPECIFIC SETTINGS ===
# Auto-generated by Replit, don't modify
REPL_ID=auto_generated
REPL_SLUG=auto_generated
REPL_OWNER=auto_generated
